spring:
  datasource:
    url: jdbc:mysql://localhost:3306/pet_store?useSSL=false&serverTimezone=UTC
    username: pet_store
    password: pet_store
  jpa:
    hibernate:
      ddl-auto: update  # Automatically updates schema
    show-sql: true      # Shows SQL in the console
    properties:
      hibernate:
        format_sql: true